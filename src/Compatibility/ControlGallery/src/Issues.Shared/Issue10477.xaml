<?xml version="1.0" encoding="utf-8" ?>
<controls:TestContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="clr-namespace:Microsoft.Maui.Controls.ControlGallery.Issues"
    xmlns:controls="clr-namespace:Microsoft.Maui.Controls.ControlGallery"
    x:Class="Microsoft.Maui.Controls.ControlGallery.Issues.Issue10477"
    Title="Issue 10477">
    <CollectionView
        ItemsSource="{Binding Items}">
        <CollectionView.Header>
            <StackLayout
                HeightRequest="200"
                BackgroundColor="Pink">
                <Button
                    Text="Click"
                    Command="{Binding ClickCommand}"/>
            </StackLayout>
        </CollectionView.Header>
        <CollectionView.EmptyView>
            <Label
                Text="Empty"/>
        </CollectionView.EmptyView>
    </CollectionView>
</controls:TestContentPage>